{
    "compileOnSave": true,
    "compilerOptions": {
        "declaration": true,
        "pretty": true,
        "removeComments": true,
        "sourceMap": true,
        "sourceRoot": "./src/main/",
        "declarationDir": "./types/",
        "outDir": "./dist/lib/",
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "noImplicitUseStrict": true,
        //"noUnusedParameters": true,
        "lib": [
            "dom",
            "es2015",
            "es2017"
        ]
    },
    "include": [
        "src/main/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spect.ts"
    ]
}